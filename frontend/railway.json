{
    "$schema": "https://schema.railway.app/railway.json#",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install && npm run build"
    },
    "deploy": {
        "startCommand": "npx serve -s build -l $PORT",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}