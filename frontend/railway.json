{
    "$schema": "https://schema.railway.app/railway.json#",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "node_modules/.bin/serve -s build -l tcp://0.0.0.0:$PORT",
        "healthcheckPath": "/",
        "healthcheckTimeout": 300,
        "restartPolicyType": "ON_FAILURE"
    }
}